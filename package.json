{
  "name": "news-rss",
  "version": "1.0.0",
  "description": "RSS feed aggregator with AI summarization and notifications",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run start:rss-main",
    "start:rss-main": "node dist/main.js",
    "start:rss-worker": "node dist/worker.js",
    "start:ai-search": "node dist/ai-search-app.js",
    "start:rss-all": "node dist/main.js & node dist/worker.js & wait",
    "start:all": "npm run start:rss-all & npm run start:ai-search & wait",
    "dev": "npm run dev:rss-main",
    "dev:rss-main": "ts-node-dev --respawn --transpile-only src/main.ts",
    "dev:rss-worker": "ts-node-dev --respawn --transpile-only src/worker.ts",
    "dev:ai-search": "ts-node-dev --respawn --transpile-only src/ai-search-app.ts",
    "dev:rss-all": "npm run dev:rss-main & npm run dev:rss-worker & wait",
    "dev:all": "npm run dev:rss-all & npm run dev:ai-search & wait",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:main": "docker-compose logs -f newsrss-main",
    "docker:logs:worker": "docker-compose logs -f newsrss-worker",
    "docker:logs:ai-search": "docker-compose logs -f newsrss-ai-search",
    "docker:logs:rss": "docker-compose logs -f newsrss-main newsrss-worker",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:make": "knex migrate:make",
    "db:create": "createdb newsrss",
    "db:drop": "dropdb newsrss",
    "lint": "eslint . --ext .ts",
    "test": "jest"
  },
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "axios": "^1.6.7",
    "cheerio": "^1.0.0-rc.12",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.5.0",
    "ioredis": "^5.6.1",
    "js-yaml": "^4.1.0",
    "knex": "^3.1.0",
    "node-cron": "^4.1.0",
    "openai": "^5.1.1",
    "pg": "^8.16.0",
    "promise-retry": "^2.0.1",
    "rss-parser": "^3.13.0",
    "winston": "^3.11.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/js-yaml": "^4.0.9",
    "@types/knex": "^0.16.1",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.2",
    "@types/promise-retry": "^1.1.3",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
